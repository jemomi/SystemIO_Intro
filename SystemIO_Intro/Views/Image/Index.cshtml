
@{
    ViewBag.Title = "Index";
}

<h2>Resize et billede</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label for="file">Fil</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("maxHeight")
                        @Html.TextBox("maxHeight", null, new { @class = "form-control", @type = "number" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("maxWidth")
                        @Html.TextBox("maxWidth", null, new { @class = "form-control", @type = "number" })
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Resize billede</button>
        }
    </div>
    <div class="col-md-12">
        @if (Model != null)
        {
            <div class="panel">
                <div class="panel-body">
                    <h4>
                        Dit nye og resized billede
                    </h4>
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ToArray(), 0,Model.ToArray().Length))" />
                </div>
            </div>
        }
    </div>
</div>
